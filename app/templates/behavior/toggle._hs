behavior _Toggle(tab)
    on every click
        set thisTab to tab.nextElementSibling
        for otherTab in <div.acc-content/>
            if otherTab is not thisTab then
                set otherTab.style to ''
                remove .rotate-180 from (<svg/> in otherTab.parentElement)
            else
                set thisTab.style to `max-height: ${thisTab.scrollHeight}px`
                add .rotate-180 to (<svg/> in tab)
            end
        end
end