behavior ShowPassword(passwordField, show_icon, hide_icon)
    init
        if no passwordField set the passwordField to me
    end

    on load
        if passwordField@type matches 'password' then
            show show_icon
        end
    end

    on mousedown
        add [@type=text] to passwordField
        hide show_icon
        show hide_icon
    end

    on mouseleave or mouseup from body
        add [@type=password] to passwordField
        show show_icon
        hide hide_icon
    end
end